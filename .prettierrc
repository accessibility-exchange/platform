{
    "printWidth": 120,
    "tabWidth": 4,
    "useTabs": false,
    "plugins": [
        "@shufo/prettier-plugin-blade"
    ],
    "overrides": [
        {
            "files": [
                "*.yml"
            ],
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": [
                "*.blade.php"
            ],
            "options": {
                "tabWidth": 4,
                "parser": "blade",
                "sortTailwindcssClasses": true,
                "sortHtmlAttributes": "code-guide"
            }
        },
        {
            "files": [
                "*.js"
            ],
            "options": {
                "trailingComma": "none"
            }
        }
    ]
}
