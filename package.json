{
    "name": "@accessibility-exchange/platform",
    "private": true,
    "scripts": {
        "build": "npm run props && vite build",
        "dev": "vite",
        "format": "prettier --write resources/**/*.css",
        "lint:scripts": "eslint *.js resources/js/**/*.js",
        "lint:styles": "stylelint resources/css/**/*.css",
        "lint": "run-s lint:*",
        "props": "node css-props-generator.js",
        "postinstall": "husky install && npm run build"
    },
    "lint-staged": {
        "resources/css/**/*.css": [
            "stylelint --fix",
            "prettier --write"
        ],
        "resources/js/**/*.js": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.php": [
            "vendor/bin/pint"
        ],
        "*.blade.php": [
            "prettier --write"
        ]
    },
    "devDependencies": {
        "@commitlint/cli": "^17.3.0",
        "@commitlint/config-conventional": "^17.6.1",
        "@shufo/prettier-plugin-blade": "^1.8.12",
        "@tailwindcss/typography": "^0.5.9",
        "autoprefixer": "^10.4.14",
        "eslint": "^8.37.0",
        "eslint-config-fluid": "^2.1.1",
        "eslint-config-prettier": "^8.8.0",
        "husky": "^8.0.3",
        "laravel-vite-plugin": "^0.7.3",
        "lint-staged": "^13.0.4",
        "modern-css-reset": "^1.4.0",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.24",
        "postcss-custom-media": "^9.1.3",
        "postcss-import": "^15.1.0",
        "postcss-import-ext-glob": "^2.1.1",
        "postcss-logical": "^6.1.0",
        "prettier": "^2.8.8",
        "stylelint": "^14.16.1",
        "stylelint-config-prettier": "^9.0.5",
        "stylelint-config-standard": "^29.0.0",
        "stylelint-order": "^5.0.0",
        "stylelint-use-logical-spec": "^4.1.0",
        "tailwindcss": "^3.3.2",
        "tippy.js": "^6.3.7",
        "vite": "^3.2.2",
        "vite-plugin-full-reload": "^1.0.5",
        "vite-plugin-manifest-sri": "^0.1.0",
        "vite-plugin-static-copy": "^0.12.0"
    },
    "dependencies": {
        "@alpinejs/mask": "^3.12.0",
        "@vimeo/player": "^2.18.0",
        "alpinejs": "^3.12.0",
        "axios": "^1.2.2",
        "infusion": "^4.6.0",
        "luxon": "^3.0.4",
        "wicg-inert": "^3.1.2"
    }
}
