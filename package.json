{
    "name": "@accessibility-exchange/platform",
    "private": true,
    "scripts": {
        "dev": "npm run development",
        "development": "mix",
        "hot": "mix watch --hot",
        "lint:js": "eslint *.js resources/js/**/*.js",
        "lint:sass": "stylelint resources/css/**/*.scss",
        "lint": "run-s lint:*",
        "postinstall": "husky install && npm run dev",
        "prod": "npm run production",
        "production": "mix --production",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "watch": "mix watch"
    },
    "lint-staged": {
        "*.scss": [
            "stylelint"
        ],
        "*.js": [
            "eslint"
        ],
        "*.php": [
            "composer format"
        ]
    },
    "devDependencies": {
        "@commitlint/cli": "^15.0.0",
        "@commitlint/config-conventional": "^15.0.0",
        "browser-sync": "^2.27.7",
        "browser-sync-webpack-plugin": "^2.3.0",
        "chokidar": "^3.5.2",
        "eslint": "^7.32.0",
        "eslint-config-fluid": "^2.0.0",
        "husky": "^7.0.4",
        "laravel-mix": "^6.0.39",
        "laravel-mix-sri": "^1.0.7",
        "lint-staged": "^12.1.2",
        "npm-run-all": "^4.1.5",
        "resolve-url-loader": "^4.0.0",
        "sass": "^1.35",
        "sass-loader": "^12.1",
        "stylelint": "^14.1.0",
        "stylelint-config-standard-scss": "^3.0.0",
        "stylelint-order": "^5.0.0",
        "stylelint-use-logical-spec": "^3.2.2"
    },
    "dependencies": {
        "@fluid-project/looseleaf": "^1.6",
        "alpinejs": "^3.9",
        "axios": "^0.26",
        "luxon": "^2.3"
    }
}
