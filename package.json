{
    "name": "@accessibility-exchange/platform",
    "private": true,
    "scripts": {
        "build": "npm run props && vite build",
        "dev": "vite",
        "format": "prettier --write resources/**/*.css",
        "lint:scripts": "eslint *.js resources/js/**/*.js",
        "lint:styles": "stylelint resources/css/**/*.css",
        "lint": "run-s lint:*",
        "props": "node css-props-generator.js",
        "postinstall": "husky install && npm run build"
    },
    "lint-staged": {
        "resources/css/**/*.css": [
            "stylelint --fix",
            "prettier --write"
        ],
        "resources/js/**/*.js": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.php": [
            "vendor/bin/pint"
        ],
        "*.blade.php": [
            "prettier --write"
        ]
    },
    "devDependencies": {
        "@commitlint/cli": "^17.2.0",
        "@commitlint/config-conventional": "^17.1.0",
        "@shufo/prettier-plugin-blade": "^1.8.0",
        "autoprefixer": "^10.4.12",
        "eslint": "^8.24.0",
        "eslint-config-fluid": "^2.0.1",
        "eslint-config-prettier": "^8.5.0",
        "husky": "^8.0.1",
        "laravel-vite-plugin": "^0.6.1",
        "lint-staged": "^13.0.3",
        "modern-css-reset": "^1.4.0",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.19",
        "postcss-custom-media": "^8.0.2",
        "postcss-import": "^15.0.0",
        "postcss-import-ext-glob": "^2.1.1",
        "postcss-logical": "^5.0.4",
        "prettier": "^2.8.0",
        "stylelint": "^14.13.0",
        "stylelint-config-prettier": "^9.0.3",
        "stylelint-config-standard": "^28.0.0",
        "stylelint-order": "^5.0.0",
        "stylelint-use-logical-spec": "^4.1.0",
        "tailwindcss": "^3.1.8",
        "vite": "^3.2.2",
        "vite-plugin-full-reload": "^1.0.4",
        "vite-plugin-manifest-sri": "^0.1.0"
    },
    "dependencies": {
        "@alpinejs/mask": "^3.10.5",
        "@popperjs/core": "^2.11.6",
        "@vimeo/player": "^2.18.0",
        "alpinejs": "^3.10.5",
        "axios": "^0.27.2",
        "luxon": "^3.0.4",
        "wicg-inert": "^3.1.2"
    }
}
