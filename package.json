{
    "name": "@accessibility-exchange/platform",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "npm run props && vite build",
        "dev": "vite",
        "format": "prettier --write resources/**/*.css",
        "lint:scripts": "eslint *.js resources/js/**/*.js",
        "lint:styles": "stylelint resources/css/**/*.css",
        "lint": "run-s lint:*",
        "props": "node css-props-generator.js",
        "postinstall": "husky install && npm run build"
    },
    "lint-staged": {
        "resources/css/**/*.css": [
            "stylelint --fix",
            "prettier --write"
        ],
        "resources/js/**/*.js": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.php": [
            "vendor/bin/pint"
        ],
        "*.blade.php": [
            "prettier --write"
        ]
    },
    "devDependencies": {
        "@commitlint/cli": "^17.7.1",
        "@commitlint/config-conventional": "^18.1.0",
        "@shufo/prettier-plugin-blade": "^1.11.1",
        "@tailwindcss/forms": "^0.5.6",
        "@tailwindcss/typography": "^0.5.10",
        "autoprefixer": "^10.4.16",
        "eslint": "^8.44.0",
        "eslint-config-fluid": "^2.1.1",
        "eslint-config-prettier": "^9.0.0",
        "husky": "^8.0.3",
        "laravel-vite-plugin": "^0.7.8",
        "lint-staged": "^14.0.1",
        "modern-css-reset": "^1.4.0",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.31",
        "postcss-custom-media": "^9.1.3",
        "postcss-import": "^15.1.0",
        "postcss-import-ext-glob": "^2.1.1",
        "postcss-logical": "^7.0.0",
        "prettier": "^3.0.3",
        "stylelint": "^15.11.0",
        "stylelint-config-standard": "^34.0.0",
        "stylelint-order": "^6.0.3",
        "stylelint-use-logical-spec": "^5.0.0",
        "tailwindcss": "^3.3.6",
        "tippy.js": "^6.3.7",
        "vite": "^3.2.2",
        "vite-plugin-full-reload": "^1.0.5",
        "vite-plugin-manifest-sri": "^0.1.0",
        "vite-plugin-static-copy": "^0.17.0"
    },
    "dependencies": {
        "@vimeo/player": "^2.20.1",
        "axios": "^1.5.1",
        "infusion": "^4.6.0",
        "luxon": "^3.4.3",
        "wicg-inert": "^3.1.2"
    }
}
