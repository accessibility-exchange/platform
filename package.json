{
    "name": "@accessibility-exchange/platform",
    "private": true,
    "scripts": {
        "dev": "npm run development",
        "development": "mix",
        "format": "prettier --write resources/**/*.css",
        "hot": "mix watch --hot",
        "lint:scripts": "eslint *.js resources/js/**/*.js",
        "lint:styles": "stylelint resources/css/**/*.css",
        "lint": "run-s lint:*",
        "postinstall": "husky install && npm run prod",
        "prod": "npm run production",
        "production": "mix --production",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "watch": "mix watch"
    },
    "lint-staged": {
        "resources/css/**/*.css": [
            "stylelint",
            "prettier --write"
        ],
        "resources/js/**/*.js": [
            "eslint"
        ],
        "*.php": [
            "vendor/bin/php-cs-fixer fix --config=.php_cs.dist.php --allow-risky=yes"
        ]
    },
    "devDependencies": {
        "@commitlint/cli": "^15.0.0",
        "@commitlint/config-conventional": "^15.0.0",
        "browser-sync": "^2.27.7",
        "browser-sync-webpack-plugin": "^2.3.0",
        "chokidar": "^3.5.2",
        "eslint": "^7.32.0",
        "eslint-config-fluid": "^2.0.0",
        "husky": "^7.0.4",
        "laravel-mix": "^6.0.39",
        "laravel-mix-sri": "^1.0.7",
        "lint-staged": "^12.1.2",
        "modern-css-reset": "^1.4.0",
        "npm-run-all": "^4.1.5",
        "postcss-custom-media": "^8.0.0",
        "postcss-easy-import": "^4.0.0",
        "postcss-jit-props": "^1.0.4",
        "prettier": "^2.5.1",
        "resolve-url-loader": "^4.0.0",
        "stylelint": "^14.1.0",
        "stylelint-config-prettier": "^9.0.3",
        "stylelint-config-standard": "^25.0.0",
        "stylelint-order": "^5.0.0",
        "stylelint-use-logical-spec": "^3.2.2"
    },
    "dependencies": {
        "@popperjs/core": "^2.11.5",
        "accessible-autocomplete": "^2.0.4",
        "alpinejs": "^3.10.2",
        "axios": "^0.27.2",
        "luxon": "^2.4.0",
        "open-props": "^1.3.16",
        "wicg-inert": "^3.1.1"
    }
}
