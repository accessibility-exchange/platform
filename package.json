{
    "name": "@accessibility-exchange/platform",
    "private": true,
    "scripts": {
        "build": "npm run props && vite build",
        "dev": "vite",
        "format": "prettier --write resources/**/*.css",
        "lint:scripts": "eslint *.js resources/js/**/*.js",
        "lint:styles": "stylelint resources/css/**/*.css",
        "lint": "run-s lint:*",
        "props": "node css-props-generator.js",
        "postinstall": "husky install && npm run build"
    },
    "lint-staged": {
        "resources/css/**/*.css": [
            "stylelint",
            "prettier --write"
        ],
        "resources/js/**/*.js": [
            "eslint",
            "prettier --write"
        ],
        "*.php": [
            "vendor/bin/pint"
        ],
        "*.blade.php": [
            "prettier --write"
        ]
    },
    "devDependencies": {
        "@commitlint/cli": "^15.0.0",
        "@commitlint/config-conventional": "^15.0.0",
        "@shufo/prettier-plugin-blade": "^1.5.5",
        "autoprefixer": "^10.4.7",
        "eslint": "^7.32.0",
        "eslint-config-fluid": "^2.0.1",
        "husky": "^7.0.4",
        "laravel-vite-plugin": "^0.3.0",
        "lint-staged": "^12.1.2",
        "modern-css-reset": "^1.4.0",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.14",
        "postcss-custom-media": "^8.0.0",
        "postcss-import": "^14.1.0",
        "postcss-import-ext-glob": "^2.0.1",
        "postcss-logical": "^5.0.4",
        "prettier": "^2.5.1",
        "stylelint": "^14.1.0",
        "stylelint-config-prettier": "^9.0.3",
        "stylelint-config-standard": "^25.0.0",
        "stylelint-order": "^5.0.0",
        "stylelint-use-logical-spec": "^3.2.2",
        "tailwindcss": "^3.1.4",
        "vite": "^2.9.13",
        "vite-plugin-full-reload": "^1.0.1",
        "vite-plugin-manifest-sri": "^0.1.0"
    },
    "dependencies": {
        "@popperjs/core": "^2.11.6",
        "accessible-autocomplete": "^2.0.4",
        "alpinejs": "^3.10.3",
        "axios": "^0.27.2",
        "luxon": "^3.0.3",
        "wicg-inert": "^3.1.2"
    }
}
