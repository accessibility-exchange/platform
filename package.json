{
    "private": true,
    "scripts": {
        "dev": "npm run development",
        "development": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "mix --production",
        "lint:js": "eslint *.js resources/js/**/*.js",
        "lint:sass": "stylelint resources/css/**/*.scss",
        "lint": "run-s lint:*",
        "postinstall": "husky install"
    },
    "lint-staged": {
        "*.scss": [
            "stylelint"
        ],
        "*.js": [
            "eslint"
        ]
    },
    "devDependencies": {
        "@commitlint/cli": "^11.0.0",
        "@commitlint/config-conventional": "^11.0.0",
        "browser-sync": "^2.26.14",
        "browser-sync-webpack-plugin": "^2.2.2",
        "chokidar": "^3.5.1",
        "eslint": "^7.18.0",
        "eslint-config-fluid": "^2.0.0",
        "husky": "^5.0.9",
        "laravel-mix": "^6.0.6",
        "laravel-mix-purgecss": "^6.0.0",
        "laravel-mix-sri": "^0.0.6",
        "lint-staged": "^10.5.3",
        "npm-run-all": "^4.1.5",
        "resolve-url-loader": "^3.1.0",
        "sass": "^1.32.5",
        "sass-loader": "^8.0.2",
        "stylelint": "^13.10.0",
        "stylelint-config-fluid": "^0.1.0",
        "stylelint-use-logical": "^1.1.0"
    },
    "dependencies": {
        "@accessibility-in-action/looseleaf": "^1.3.1",
        "alpinejs": "^3.2.1",
        "axios": "^0.21.1",
        "modern-css-reset": "^1.4.0"
    }
}
